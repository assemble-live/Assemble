.avatar
  display flex
  align-items center
  justify-content center
  border-radius 50%
  border 5px solid grey
  background-size contain
  user-select none
  background-color #404040
  color hsla(0,0%,100%,.67)

  .avatar-letters
    font-size larger

  &.form
    height 80px
    width 80px

  &.blob
    position absolute
    height 100%
    width 100%
