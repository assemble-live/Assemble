.center-with-padding
  flexbox(flex)
  justify-content(center)
  width 100%
  height 100%
  background-image url('/img/screenshot.jpg')
  background-repeat none
  background-size cover
  opacity 1

  .overlay
    background-color black
    position absolute
    height 100%
    width 100%
    opacity 0.7

  .room-status-container
    position fixed
    top auto
    bottom 100px
    max-height 500px
    padding 20px
    min-width 600px
    border-radius 5px

    .button-right
      float right
