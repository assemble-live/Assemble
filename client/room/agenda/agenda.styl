.agenda-container
  position fixed
  width 300px
  top 20px
  left 20px
  display flex
  justify-content center
  flex-direction column
  {layer2}
  max-height 85%
  box-shadow 3px 3px 5px black

  .agenda
    width 90%
    position relative
    display flex
    justify-content center
    align-items center
    padding 20px

    .agenda-items-container
      display flex
      flex-direction column
      padding-left 10px
      padding-right 10px

    .agenda-items
      display flex
      flex-direction column
      overflow-y scroll

    .drawer-header
      width 100%
      height 60px
      flexbox flex
      align-items center
      justify-content center
      font-size larger
      font-weight bold

    .drawer-footer
      width 100%
      height 60px
      bottom 0
      position absolute
      flexbox flex
      align-items center
      justify-content center
      font-size larger
      font-weight bold

    .create-icon-container
      width 10%
      display flex
      justify-content center
      align-items center

    .agenda-text
      display flex
      justify-content center
      flex-direction column
      height 50px
      width 90%
      margin-top 20px
      margin-bottom 20px

      .agenda-title
        font-size larger
        font-weight bold

      .agenda-description
        font-size smaller
