.checkpoint-blob
  position fixed
  top 0
  left 0
  border-radius 50%
  transition transform .2s linear
  z-index 100
  flexbox flex
  display flex
  justify-content center
  align-items center

  .checkpoint-label
    position absolute
    transform translate(0px, 50px)
    padding 5px
    border-radius 3px
    color white
    text-align center
