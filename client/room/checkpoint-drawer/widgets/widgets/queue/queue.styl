.queue
  .speaking-box
    width 100%
    height 100px
    display flex
    justify-content space-around
    align-items center

    .name-volume-container
      width 70%

      .name
        margin-left 10px

  .buttons-layer
    display flex
    justify-content space-between
    flex-direction row-reverse

    .queue-button
      width 80px

    .add-me
      background-color red

    .done-speaking
      background-color green

  .queue-container
    margin-top 10px
    display flex
    flex-wrap wrap
    justify-content space-around
    max-height 250px

    .queue-item
      display flex
      align-items flex-end
      width 140px
      padding-left 5px
      padding-right 5px
      height 25px
