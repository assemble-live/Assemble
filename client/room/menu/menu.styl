.menu
  border-radius 50%
  position fixed
  bottom 20px
  left 20px
  height 40px
  width 40px
  border 1px solid black
  box-shadow 2px 2px 2px black
  flexbox flex
  flex-direction column
  justify-content center
  align-items center
  cursor pointer

  .menu
    animation out 100ms linear

  :hover
    .tooltip
      display block

  .tooltip
    position absolute
    align-self flex-start
    transform translateX(55px)
    width 200px
    white-space nowrap
    display none

@keyframes out
  0%
    transform translate(0px, 0px)

@keyframes in
  100%
    transform translate(0px, 0px)
