.user-blob
  position fixed
  top 0
  left 0
  border-radius 50%
  transition transform .2s linear

.volume-indicator
  position absolute
  border-radius 50%
  z-index -1
  &.animatable
    animation pulse .5s linear infinite

@keyframes pulse
  0%
    transform scale(1)
    opacity 1
  100%
    opacity 0

.name-text
  text-transform uppercase
  font-family Roboto, sans-serif
  font-weight bold
  font-size 12px

.badge-container
  display flex
  align-items center
  justify-content center
  height 100%
  width 100%
