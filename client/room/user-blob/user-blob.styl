.user-blob
  position fixed
  top 0
  left 0
  border-radius 50%
  border 1px solid white
  transition transform .2s ease-in-out

.volume-indicator
  position absolute
  border-radius 50%
  transition transform .5s ease-in-out
  z-index -1

.name-text
  text-transform uppercase
  font-family Roboto, sans-serif
  font-weight bold
  font-size 12px

.badge-container
  display flex
  align-items center
  justify-content center
  height 100%
  width 100%
